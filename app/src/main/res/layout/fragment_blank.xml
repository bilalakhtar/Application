<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="landscape"
    tools:context="com.project.bilalakhtar.application.BlankFragment"
    tools:showIn="@layout/content_joy">

    <com.project.bilalakhtar.application.JoystickView
        android:id="@+id/joystickView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:gravity="left" />

    <com.project.bilalakhtar.application.JoystickView2
        android:id="@+id/joystickView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/rollText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/joystickView1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/joystickView1"
        android:text="Roll: 1500"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/pitchText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Pitch: 1500"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/yawText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/joystickView"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/joystickView"
        android:text="Yaw: 1500"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/throttleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Throttle: 1500"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <com.project.bilalakhtar.application.TriToggleButton
        android:id="@+id/auxButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auxView"
        android:layout_centerHorizontal="true" />

    <com.project.bilalakhtar.application.TriToggleButton
        android:id="@+id/auxButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auxButton1"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <com.project.bilalakhtar.application.TriToggleButton
        android:id="@+id/auxButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auxButton2"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <com.project.bilalakhtar.application.TriToggleButton
        android:id="@+id/auxButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auxButton3"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/auxView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Aux 1-4"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:text="button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auxButton4"
        android:layout_alignStart="@+id/auxButton4"
        android:id="@+id/button_id" />


</RelativeLayout>

